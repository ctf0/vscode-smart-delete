{
    "name": "smart-delete",
    "displayName": "Smart Delete",
    "description": "smartly remove empty lines/spaces when using delete or backspace ",
    "publisher": "ctf0",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "repository": "https://github.com/ctf0/vscode-smart-delete",
    "activationEvents": [
        "onCommand:smart-delete.right",
        "onCommand:smart-delete.left"
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "Smart Delete",
            "type": "object",
            "properties": {
                "smart-delete.keepOneSpace": {
                    "type": "boolean",
                    "default": true,
                    "description": "keep one empty space after removal"
                },
                "smart-delete.keepOneLine": {
                    "type": "boolean",
                    "default": false,
                    "description": "keep one empty line after removal"
                }
            }
        },
        "commands": [
            {
                "command": "smart-delete.right",
                "title": "Smart Delete: right remove"
            },
            {
                "command": "smart-delete.left",
                "title": "Smart Delete: left remove"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "smart-delete.right",
                    "when": "editorIsOpen"
                },
                {
                    "command": "smart-delete.left",
                    "when": "editorIsOpen"
                }
            ]
        },
        "keybindings": [
            {
                "command": "smart-delete.right",
                "key": "delete",
                "mac": "delete",
                "when": "editorTextFocus"
            },
            {
                "command": "smart-delete.left",
                "key": "backspace",
                "mac": "backspace",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "eslint": "^6.6.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    }
}
